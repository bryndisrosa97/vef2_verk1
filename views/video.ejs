<%- include('header') -%>

  <header class="heading heading--main">
    <div class="headercontent">
      <div class="grid">
        <div class="row">
          <div class="col col-12">
            <h1 class="headingtitle"><%= video.title%></h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main>

    <div id="container">
      <div class="grid">
        <div class="row">
          <div class="col col-12">
            <div class="video">
              <video class="video__currVideo" controls>
                <source src="<%= video.video %>" type="video/mp4" />
                <p>Your browser doesn't support HTML5 video. Here is a
                  <a href="<%= video.video %>">link to the video</a> instead.
                </p>
              </video>
            </div>
            <div class="video__description">
              <p><%= video.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="videos">
      <div class="grid">

        <div class="row">
          <div class="col col-12 col-md-10 offset-col-md-1">
            <h2 class="videos__title"> Tengd myndb√∂nd </h2>
          </div>
        </div>

        <div class="row">
          <% video.related.forEach((video)=> { %>
            <div class="col col-4 col-sm-12">
              <div class="video">
                <a href="/<%= videos[video-1].id %>">
                  <div class="video__image">
                    <div class="video__img" <%=!video.poster ? 'listItem__image--empty' : '' %>">
                      <img src="<%= videos[video-1].poster %>" class="video__img" alt=""></img>
                      <div class="video__durationp">
                        <%= formatDur(videos[video-1].duration) %>
                      </div>
                    </div>
                  </div>
                </a>
                <div class="video__content">
                  <h3 class="video__title">
                    <%= videos[video-1].title %>
                  </h3>
                  <p class="video__age">
                    <%= formatAge(videos[video-1].created) %>
                  </p>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>

    <hr class="videos__line">
    <div class="footer__back">
      <a class="footer__link" href="/">Til baka</a>
    </div>

  </main>

  <%- include('footer') -%>